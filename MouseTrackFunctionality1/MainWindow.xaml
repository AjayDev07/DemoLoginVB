<Window x:Class="MouseClickCounter.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Mouse Click Counter" Width="300" Height="200">
    <Grid>
        <TextBlock Name="txtKeyPressCount" HorizontalAlignment="right" VerticalAlignment="Center" FontSize="15"  />
        <TextBlock Name="txtMouseClickCount" HorizontalAlignment="Left" VerticalAlignment="Center" FontSize="15" />
        <Button Content="Click Me" Name="btnClick" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="0,10,10,0" Click="btnClick_Click" />
    </Grid>
</Window>






